#include <stdio.h>

int main() {
    int num1,num2,num3,num4,average;
    printf("enter the value:");
    scanf("%d%d%d%d",&num1,&num2,&num3,&num4);
    average=(num1,num2,num3,num4)/4;
    printf("average of the num value=%d\n",average);
    return 0;
}